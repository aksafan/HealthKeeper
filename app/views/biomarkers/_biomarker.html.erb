<div id="<%= dom_id biomarker %>" class="tw-border-double tw-shadow-lg tw-ring-4 tw-rounded-lg">
  <div class="tw-m-8">

    <p class="tw-pt-2 tw-pr-6">
      <strong>Name:</strong>
      <%= biomarker.name %>
    </p>

    <div class="tw-flex tw-flex-row tw-space-x-4">
      <% biomarker.reference_ranges.each do |reference_range| %>
        <div class="tw-basis-1/3 tw-ring-2 tw-rounded-lg tw-p-4">
        <p>
          <strong>Min value:</strong>
          <%= format_range(reference_range.min_value, reference_range.unit) %>
        </p>

        <p>
          <strong>Max value:</strong>
          <%= format_range(reference_range.max_value, reference_range.unit) %>
        </p>

        <p>
          <strong>Source:</strong>
          <%= reference_range.source %>
        </p>

        <p>
          <strong>Created at:</strong>
          <%= format_date reference_range.created_at %>
        </p>

        <p>
          <strong>Updated at:</strong>
          <%= format_date reference_range.updated_at %>
        </p>

        <% if policy(:reference_range).destroy? %>
          <%= button_to "Destroy this Reference Range", reference_range, method: :delete, class: "tw-bg-red-500 tw-hover:bg-blue-700 tw-text-white tw-font-bold tw-py-2 tw-px-4 tw-rounded" %>
        <% end %>

        </div>
      <% end %>
    </div>

    <p class="tw-pt-6 tw-pr-6 tw-pb-6">
      <%= link_to "Show this biomarker", biomarker, class: "tw-bg-blue-500 tw-hover:bg-blue-700 tw-text-white tw-font-bold tw-py-2 tw-px-4 tw-rounded" %>
    </p>

  </div>

</div>
